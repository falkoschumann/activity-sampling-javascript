{
  "name": "@activity-sampling/desktop2",
  "version": "0.1.0",
  "author": "Falko Schumann",
  "description": "Periodically asks the user about their current activity and logs it for analysis.",
  "license": "MIT",
  "engines": {
    "node": ">=18.7.0"
  },
  "main": "./out/main/index.js",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run build:linux && npm run build:mac && npm run build:win",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "electron-vite build && electron-builder --dir",
    "build:linux": "electron-vite build && electron-builder --linux",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:win": "electron-vite build && electron-builder --win"
  },
  "dependencies": {
    "@activity-sampling/frontend": "0.1.0",
    "@electron-toolkit/preload": "3.0.1",
    "@electron-toolkit/utils": "3.0.0"
  },
  "devDependencies": {
    "electron": "32.0.1",
    "electron-builder": "24.13.3",
    "electron-vite": "2.3.0",
    "vite": "5.4.2"
  }
}
