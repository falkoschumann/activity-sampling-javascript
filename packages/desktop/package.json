{
  "name": "@activity-sampling/desktop",
  "version": "0.1.0",
  "author": "Falko Schumann",
  "description": "Periodically asks the user about their current activity and logs it for analysis.",
  "license": "MIT",
  "engines": {
    "node": ">=18.7.0"
  },
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "NODE_OPTIONS=\"--experimental-global-customevent --experimental-vm-modules\" npx jest",
    "build": "npm run build:linux && npm run build:mac && npm run build:win",
    "build:linux": "electron-forge make --platform=linux --arch=x64",
    "build:mac": "electron-forge make --platform=darwin --arch=x64",
    "build:win": "electron-forge make --platform=win32 --arch=x64",
    "dev": "electron-forge start"
  },
  "dependencies": {
    "@activity-sampling/frontend": "0.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "7.4.0",
    "@electron-forge/maker-zip": "7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "7.4.0",
    "@electron-forge/plugin-fuses": "7.4.0",
    "@electron-forge/plugin-vite": "7.4.0",
    "@electron/fuses": "1.8.0",
    "@jest/globals": "29.7.0",
    "electron": "32.0.1",
    "jest": "29.7.0",
    "vite": "5.4.2"
  }
}
