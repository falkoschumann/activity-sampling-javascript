{
  "name": "@activity-sampling/desktop",
  "version": "0.1.0",
  "author": "Falko Schumann",
  "license": "MIT",
  "description": "Activity Sampling periodically asks the user about their current activity and logs it for analysis.",
  "engines": {
    "node": ">=18.7.0"
  },
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build-mac && npm run build-win",
    "build-mac": "electron-packager . \"Activity Sampling\" --overwrite --asar --out=dist --platform=darwin --arch=arm64,x64",
    "build-win": "electron-packager . activity-sampling --overwrite --asar --out=dist --platform=win32 --arch=x64"
  },
  "devDependencies": {
    "@electron/packager": "18.3.3",
    "electron": "31.3.1"
  }
}
