{
  "name": "@activity-sampling/desktop",
  "version": "0.1.0",
  "author": "Falko Schumann",
  "license": "MIT",
  "description": "Activity Sampling periodically asks the user about their current activity and logs it for analysis.",
  "engines": {
    "node": ">=18.7.0"
  },
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "TODO": "try to build with @electron-forge and make zip for each target",
    "build": "npm run build-mac && npm run build-win",
    "build-mac": "electron-packager . \"Activity Sampling\" --executable-name=activity-sampling --overwrite --asar --out=dist --platform=darwin --arch=arm64,x64",
    "build-win": "electron-packager . \"Activity Sampling\" --executable-name=activity-sampling --overwrite --asar --out=dist --platform=win32 --arch=x64",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "7.4.0",
    "@electron-forge/maker-deb": "7.4.0",
    "@electron-forge/maker-rpm": "7.4.0",
    "@electron-forge/maker-squirrel": "7.4.0",
    "@electron-forge/maker-zip": "7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "7.4.0",
    "@electron-forge/plugin-fuses": "7.4.0",
    "@electron/fuses": "1.8.0",
    "electron": "31.3.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "1.0.1"
  }
}
