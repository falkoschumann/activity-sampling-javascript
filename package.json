{
  "name": "activity-sampling",
  "version": "0.1.0",
  "description": "",
  "author": "Falko Schumann",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "activity-sampling-web",
    "activity-sampling-server",
    "activity-sampling-desktop"
  ],
  "scripts": {
    "build": "npm run dist --workspaces --if-present && npm run test && npm run check",
    "clean": "npm run clean --workspaces --if-present",
    "test": "node --no-warnings=ExperimentalWarning --experimental-vm-modules node_modules/jest/bin/jest.js",
    "check": "prettier . --check && eslint */src */tests",
    "format": "prettier . --write && eslint --fix */src */tests",
    "start": "npm run start --workspace=activity-sampling-server",
    "devserver": "npm run dev --workspace=activity-sampling-server",
    "devweb": "npm run dev --workspace=activity-sampling-web"
  },
  "dependencies": {
    "lit-html": "3.0.0"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "eslint": "8.51.0",
    "jest": "29.7.0",
    "prettier": "3.0.3"
  },
  "jest": {
    "transform": {},
    "watchPathIgnorePatterns": [
      "<rootDir>/activity-sampling-server/data/",
      "<rootDir>/activity-sampling-server/public/"
    ],
    "verbose": true,
    "globalSetup": "./jest.setup.js"
  },
  "prettier": {
    "proseWrap": "always",
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es2022": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "/coverage/",
      "public/"
    ]
  }
}
