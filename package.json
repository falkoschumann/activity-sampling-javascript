{
  "name": "activity-sampling",
  "version": "0.1.0",
  "author": "Falko Schumann",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "csv": "6.3.6",
    "express": "4.18.2",
    "lit-html": "3.1.0"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@types/express": "4.17.21",
    "@types/supertest": "6.0.1",
    "jest": "29.7.0",
    "rollup": "4.9.1",
    "supertest": "6.3.3"
  },
  "jest": {
    "globalSetup": "./tests/jest.setup.js",
    "transform": {},
    "verbose": true,
    "watchPathIgnorePatterns": [
      "<rootDir>/data/",
      "<rootDir>/public/"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es2022": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "coverage/",
      "data/",
      "vendor/"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "data/**",
      "public/**",
      "tests/**"
    ]
  }
}
