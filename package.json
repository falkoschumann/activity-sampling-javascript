{
  "name": "activity-sampling",
  "version": "0.1.0",
  "description": "",
  "author": "Falko Schumann",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "csv": "6.3.5",
    "express": "4.18.2",
    "lit-html": "3.1.0"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@types/express": "4.17.21",
    "@types/supertest": "2.0.16",
    "supertest": "6.3.3"
  },
  "jest": {
    "transform": {},
    "watchPathIgnorePatterns": [
      "<rootDir>/activity-sampling-server/data/",
      "<rootDir>/activity-sampling-server/public/"
    ],
    "globalSetup": "./tests/jest.setup.js"
  },
  "prettier": {
    "proseWrap": "always",
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es2022": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "coverage/",
      "data/",
      "vendor/"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "data/**",
      "public/**",
      "tests/**"
    ]
  }
}
